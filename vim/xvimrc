" Common {{{
" ClipBoard
set clipboard+=unnamed
set clipboard=unnamed
" }}}

" NormalMode
nnoremap x "_x
vnoremap x "_x

nnoremap s <Nop>
nnoremap sj <C-w>j
nnoremap sk <C-w>k
nnoremap sl <C-w>l
nnoremap sh <C-w>h

nnoremap ss :<C-u>sp<CR>
nnoremap sv :<C-u>vs<CR>
nnoremap sq :<C-u>q<CR>

" InsertMode
inoremap <C-a> <C-o>^
inoremap <C-e> <C-o>$<Right>

" VisualMode
vnoremap v ^$h
" }}}
