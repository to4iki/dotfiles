{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "ENABLE_TOOL_SEARCH": "true"
  },
  "permissions": {
    "allow": [
      "Bash(git commit:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git status:*)",
      "WebFetch",
      "WebSearch"
    ],
    "deny": [
      "Bash(sudo:*)",
      "Bash(git add .:*)",
      "Bash(git add -A:*)",
      "Bash(git add --all:*)"
    ],
    "defaultMode": "acceptEdits"
  },
  "enabledPlugins": {
    "code-simplifier@claude-plugins-official": true,
    "github@claude-plugins-official": true,
    "git-workflow@to4iki-claude-code-plugins": true
  },
  "language": "japanese",
  "plansDirectory": "./plans"
}
