# ------------------------------------
# Aliases
# ------------------------------------

# General
alias history='fc -l'
alias grep='grep --color=auto'
alias pps='peco-ps'
alias pssh='peco-ssh'

# Git
alias g='git'
alias gs='git s'
alias t='tig'
alias ta='tig --all'
alias pl='peco-git-log'
alias pco='peco-git-checkout'

# Vim
alias v ='vim'
alias vi='vim'

# Ag (The Silver Search)
alias ags='ag -S --stats'
alias agh='ag --hidden'

# Ruby
alias be='bundle exec'
alias bp='bundle package'
alias bi='bundle install --path vendor/bundle'
alias bin='bundle install --path vendor/bundle --binstubs .bundle/bin'
alias irb='pry'

# Vagrant
alias vs='vagrant global-status'
