# General
# ------------------------------------
alias history='fc -l'
alias grep='grep --color=auto'
alias t='tmux'

# ------------------------------------
# Vim
# ------------------------------------
alias vi="vim"

# ------------------------------------
# Ag (The Silver Search)
# ------------------------------------
alias ags='ag -S --stats'
alias agh='ag --hidden'

