# Unix commands
alias history='fc -l'
alias grep='grep --color=auto'

# Editor
alias vi ="$EDITOR"
alias v='vi'
alias vimrc="$EDITOR ~/.vimrc"
alias zshrc="$EDITOR ~/.zshrc"

# Git
alias g='git'
alias s='git s'
alias m='git checkout master'
alias d='git d'
alias t='tig'
alias ta='tig --all'

# Ag(The Silver Search)
alias ags='ag -S --stats'
alias agh='ag --hidden'

# Ruby
alias b='bundle'
alias be='bundle exec'
alias irb='pry'

# Vagrant
alias vs='vagrant global-status'
