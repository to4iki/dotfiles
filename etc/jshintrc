{
    // 制限
    //"camelcase": true,    // 変数名はキャメルケースの使用を強制
    "curly": true,          // ループブロックと条件ブロックを常に中括弧で囲うことを強制
    "eqeqeq": true,         // == 演算子と != 演算子の使用を禁止
    //"indent" : 2,         // インデントの深さ
    "latedef": true,        // 変数を定義する前に使うのを禁止
    "quotmark": "single",   //
    //"strict": true,       // ECMAScript5 strict mode 強制
    "trailing": true,       // 行末の空白を禁止
    "maxlen" : 80,          // 一行の最大長
    "undef" : true,         // グローバル変数へのアクセスを禁止
    "unused" : true,        // 宣言したきり使っていない変数を検出

    // 緩和
    "debug": true,          // debugger を許可
    "evil": true,           // evalに警告を出さないように
    "laxcomma": true,       // カンマを最初に書くスタイルに警告を出さないように
    "loopfunc": true,       // ループ内の関数に警告を出さないように
    "smarttabs": true,      // タブとスペースを混ぜて見た目を整えている場合に警告を出さないように

    // 環境指定
    "devel" : true,         // console、alertを許可
    "jquery": true,         // jQueryのグローバルオブジェクトを定義済み
    "node": true,           // nodeのグローバルオブジェクトを定義済み
    "phantom": true,        // phantom.jsのグローバルオブジェクトを定義済み

    "globals": {
        "describe" : false,
        "it": false,
        "before": false,
        "beforeEach": false,
        "after": false,
        "afterEach": false,
        "expect": false,
        "spyOn": false
    }

    // Relaxing Options - 危険性を認識した上で設定すること
}
