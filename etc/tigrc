# Visual
set mouse = yes
set main-view = id date author commit-title:graph=yes,refs=yes
set split-view-height = 77%
set split-view-width = 77%
set ignore-space = all
set ignore-case = true
set diff-highlight = true
set refresh-mode = auto

# Alias
bind generic <Ctrl-f> scroll-page-down
bind generic <Ctrl-b> scroll-page-up
bind generic <Ctrl-g> refresh
bind generic g move-first-line
bind generic G move-last-line
bind generic y @sh -c "echo %(commit) | pbcopy"

bind main B !@hub browse -- commit/%(commit)
bind status B !@hub browse -- blob/master/%(file)
bind main D !@hub compare %(commit)...%(branch)
bind refs D !@hub compare master...%(branch)
bind main P !@whichpr open %(commit)
bind blame P !@whichpr open %(commit)
bind main R !git rebase -i %(commit)
