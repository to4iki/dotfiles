# Visual
set main-view = id date author commit-title:graph=yes,refs=yes
set split-view-height = 77%
set split-view-width = 77%
set ignore-space = all
set ignore-case = true
set diff-highlight = true
set refresh-mode = auto

# Generic
bind generic <Ctrl-f> scroll-page-down
bind generic <Ctrl-b> scroll-page-up
bind generic <Ctrl-g> refresh
## Github
bind generic o !@hub browse -- commit/%(commit)
bind generic P !@whichpr open %(commit)

# Main
bind main R !git rebase -i %(commit)

# Branch
bind branch D !?git branch -D %(branch)
bind branch [ @hub compare %(branch)
