[includeIf "gitdir:~/src/github.com/to4iki/"]
    path = ~/.gitconfig-work
[github]
    user = to4iki
[color]
    status = auto
    diff = auto
[core]
    pager = less
    editor = nvim
[alias]
    ad = add
    br = branch --verbose --verbose --color --sort=-authordate
    co = checkout
    commit = commit -v
    cav = commit -av
    d = diff --histogram
    f = fetch
    fixup = commit --amend -C HEAD
    g = grep -n -p --color --heading --break
    info = remote show origin
    l = log --decorate
    lp = log --decorate --stat --patch
    n = now --all --stat
    s = status -sb
    undo = reset --soft HEAD~
    open = browse
[tig "bind"]
    generic = g move-first-line
    generic = G move-last-line
[ghq]
    root = ~/src
[pull]
    rebase = true
[rebase]
    autoStash = true
[stash]
    showPatch = true
[diff]
    compactionHeuristic = true
[pager]
    log = diff-highlight | less
    show = diff-highlight | less
    diff = diff-highlight | less
[interactive]
    diffFilter = diff-highlight
